---
interface Props {
    product: {
        id: number;
        name: string;
        category: string;
        size: string;
        description: string;
        features: string[];
        image: string;
    };
}

const { product } = Astro.props;
---

<div class="product-card bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 animate-fade-in">
    <div class="relative h-64 bg-gradient-to-br from-natural-beige-100 to-natural-beige-200 flex items-center justify-center overflow-hidden">
        <!-- Placeholder for product image -->
        <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-eco-green-50 to-natural-beige-100">
            <div class="text-center p-6">
                <div class="w-32 h-32 mx-auto mb-4 rounded-full bg-eco-green-100 flex items-center justify-center">
                    <svg class="w-20 h-20 text-eco-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                </div>
                <span class="text-sm font-medium text-earth-brown-600">{product.category}</span>
            </div>
        </div>
        <div class="absolute top-3 right-3 bg-eco-green-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
            Eco-Friendly
        </div>
    </div>
    
    <div class="p-6">
        <h3 class="text-xl font-bold text-earth-brown-900 mb-2">{product.name}</h3>
        <p class="text-sm text-eco-green-700 font-semibold mb-3">{product.size}</p>
        <p class="text-gray-600 text-sm mb-4 line-clamp-2">{product.description}</p>
        
        <div class="space-y-2 mb-4">
            <p class="text-xs font-semibold text-earth-brown-700 uppercase">Key Features:</p>
            <div class="flex flex-wrap gap-2">
                {product.features.slice(0, 3).map((feature) => (
                    <span class="inline-flex items-center gap-1 text-xs bg-eco-green-50 text-eco-green-700 px-2 py-1 rounded-full">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {feature}
                    </span>
                ))}
            </div>
        </div>
        
        <button class="w-full bg-eco-green-600 hover:bg-eco-green-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-300 flex items-center justify-center gap-2">
            <span>View Details</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </button>
    </div>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
