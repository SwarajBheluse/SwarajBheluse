---
interface Props {
    name: string;
    category: string;
    size: string;
    description: string;
    features: string[];
    image: string;
}

const { name, category, size, description, features, image } = Astro.props;
---

<div class="product-card bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-2xl">
    <div class="relative h-48 bg-gradient-to-br from-sand-beige to-natural-tan flex items-center justify-center">
        <div class="text-6xl">üçÉ</div>
        <div class="absolute top-2 right-2 bg-forest-green text-white px-3 py-1 rounded-full text-xs font-semibold">
            {category}
        </div>
    </div>
    
    <div class="p-5">
        <h3 class="text-xl font-bold text-forest-green mb-2">{name}</h3>
        <p class="text-sm text-olive-green font-semibold mb-3">Size: {size}</p>
        <p class="text-gray-700 text-sm mb-4">{description}</p>
        
        <div class="space-y-2">
            <p class="text-xs font-semibold text-forest-green uppercase tracking-wide">Key Features:</p>
            <div class="flex flex-wrap gap-2">
                {features.map(feature => (
                    <span class="bg-leaf-green/10 text-leaf-green px-2 py-1 rounded text-xs font-medium">
                        ‚úì {feature}
                    </span>
                ))}
            </div>
        </div>
        
        <button class="mt-4 w-full bg-forest-green text-white py-2 rounded-lg hover:bg-olive-green transition-colors duration-300 font-semibold">
            Inquire Now
        </button>
    </div>
</div>

<style>
    .product-card {
        animation: fadeIn 0.6s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
